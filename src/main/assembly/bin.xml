<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">

    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${plugin.id}</baseDirectory>
    <moduleSets>
        <moduleSet>
            <includes>
                <include>net.orfjackal.extformatter:extformatter-idea-plugin</include>
                <include>net.orfjackal.extformatter:extformatter-core</include>
            </includes>
            <binaries>
                <outputDirectory>lib</outputDirectory>
                <unpack>false</unpack>
                <excludes>
                    <!-- HACK: forms_rt must be excluded here because of ideauidesigner-maven-plugin
                         which requires it to have compile scope, even though IDEA already provides it for plugins -->
                    <exclude>com.intellij:forms_rt</exclude>
                </excludes>
            </binaries>
        </moduleSet>
        <moduleSet>
            <includes>
                <include>net.orfjackal.extformatter:extformatter-help</include>
            </includes>
            <binaries>
                <outputDirectory>help</outputDirectory>
                <unpack>false</unpack>
                <outputFileNameMapping>${artifactId}.${extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <fileSet>
            <includes>
                <include>README*</include>
            </includes>
        </fileSet>
    </fileSets>

</assembly>
