<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>

    <name>${plugin.name}</name>
    <id>${plugin.id}</id>
    <version>${project.version}</version>

    <description>
        Allows using external code formatters, especially Eclipse's code formatter, from within IntelliJ IDEA.
        Solves the problem of maintaining a common code style in team environments where both IDEA and Eclipse
        are being used.
    </description>
    <category>Formatting</category>

    <vendor url="http://www.orfjackal.net">Esko Luontola</vendor>

    <idea-version since-build="7364"/>

    <change-notes><![CDATA[
        <p>1.0.0 - Initial release</p>
    ]]></change-notes>

    <project-components>
        <component>
            <implementation-class>net.orfjackal.extformatter.plugin.ProjectCodeStyleInstaller</implementation-class>
        </component>
    </project-components>

    <actions>
        <action id="${plugin.id}.ReformatAction"
                class="net.orfjackal.extformatter.plugin.ReformatAction"
                text="Reformat Code Externally..."
                description="Reformats code by using the External Code Formatter plugin">
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt L"/>
            <add-to-group group-id="CodeMenu" anchor="after" relative-to-action="ReformatCode"/>
            <add-to-group group-id="CallHierarchyPopupMenu" anchor="after" relative-to-action="ReformatCode"/>
            <add-to-group group-id="CommanderPopupMenu" anchor="after" relative-to-action="ReformatCode"/>
            <add-to-group group-id="FavoritesViewPopupMenu" anchor="after" relative-to-action="ReformatCode"/>
            <!--<add-to-group group-id="J2EEViewPopupMenu" anchor="after" relative-to-action="ReformatCode"/>-->
            <add-to-group group-id="MethodHierarchyPopupMenu" anchor="after" relative-to-action="ReformatCode"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="ReformatCode"/>
            <add-to-group group-id="ScopeViewPopupMenu" anchor="after" relative-to-action="ReformatCode"/>
            <add-to-group group-id="TypeHierarchyPopupMenu" anchor="after" relative-to-action="ReformatCode"/>
            <add-to-group group-id="Vcs.FileViewPopup" anchor="after" relative-to-action="ReformatCode"/>
        </action>
    </actions>

</idea-plugin>
